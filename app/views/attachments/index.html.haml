-if user_signed_in?
  .row
    .large-12.columns
      %h1 Listing attachments

      %table
        %tr
          %th Name
          %th Description
          %th Filetype
          %th Filelocation
          %th
          %th
          %th

        - @attachments.each do |attachment|
          %tr
            %td= attachment.name
            %td= attachment.description
            %td= attachment.file_content_type
            %td= attachment.file.url
            %td= link_to 'Show', attachment
            %td= link_to 'Edit', edit_attachment_path(attachment)
            %td= link_to 'Destroy', attachment, :method => :delete, :data => { :confirm => 'Are you sure?' }

      %br

      = link_to 'New Attachment', new_attachment_path
