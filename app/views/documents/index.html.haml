.row
  .large-12.columns
    .panel
      %i.fa.fa-list.fa-1x DOCUMENTS
      %a.pull-right{:href => new_document_path}
        %i.fa.fa-plus.fa-1x 
    %table.tude
      %thead
        %tr
          %th{width: 20} ID
          %th{width: 400} Name
          %th{width: 150} Description
          %th{width: 200} Filename
          %th{width: 225}
      %tbody
        - @documents.each do |document|
          %tr.classy
            %td= document.id
            %td= document.name
            %td= document.description
            %td= document.doc_file_name
            %td
              .button-group.radius.pull-right
                %a.button.secondary.tiny{:href => document_path(document)}
                  %i.fa.fa-info.fa-fw.fa-2x
                  
                %a.button.secondary.tiny{:href => edit_document_path(document)}
                  %i.fa.fa-pencil.fa-fw.fa-2x
                  
                %a.button.alert.tiny{:href => document, method: :delete, data: { confirm: 'Are you sure?' }}
                  %i.fa.fa-trash-o.fa-fw.fa-2x

                
    %br