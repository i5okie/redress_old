= simple_form_for @document do |f|
  - if @document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@document.errors.count, "error")} prohibited this document from being saved:"
      %ul
        - @document.errors.full_messages.each do |msg|
          %li= msg

  .row
    .large-12.columns
      = f.input :name
  .row
    .large-12.columns
      = f.input :description
  .row
    .large-12.columns
      = f.input :filetype
  .row
    .large-12.columns
      = f.file_field :filelocation
  .row
    .large-12.columns
      = f.button :submit