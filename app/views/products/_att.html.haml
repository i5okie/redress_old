.row.filelist
  .small-8.columns.filename
    = best_in_place att, :name, :cancel_button => "Cancel", :ok_button => "OK", :nil => att.file.original_filename
  .small-2.columns.download_link
    = link_to "Download", att.file.url, class: "small-offset-1"
  .small-2.columns.delete_checkbox
    = f.simple_fields_for :documents, att do |attachment|
      = attachment.input_field :_destroy, as: :boolean