.container
  .row
    .large-12.columns
      %ol.breadcrumbs
        %li
          %a{:href => "#"}= link_to 'Support Resources', root_path
        %li
          %a{:href => "#"}= @product.category.name
        %li.active= @product.manufacturer + ' ' + @product.name
  .row
    .heading.moon
      .large-6.columns
        .h2
          = @product.manufacturer
        .h1
          = @product.name
        %p
          .lead= @product.description
      .large-4.columns
        .right
          = image_tag @product.image_url(:thumb).to_s, :class=>"img-rounded"
  .row
    .large-12.columns
      %h3 Available Resources
      .panel
        %p
          Applies to following models:
          - @product.apms.each do |tg|
            %span.label.label-default= tg
      / Nav tabs
      %dl.tabs{"data-tab" => "true"}
        %dd.active
          %a{:href => "#documents"} DOCUMENTS
        %dd
          %a{:href => "#drivers"} DRIVERS
        %dd
          %a{:href => "#videos"} VIDEOS
      .tabs-content
        #documents.content.active
          %table.table.table-striped.table-hover
            %thead
              %tr
                %th{width: 850}
                  Filename
                %th{width: 100}
                  Download
            %tbody
              = @products.pdocuments.each do |pd|
                %tr
                  %td
                    = link_to pd.name, pd.filelocation
                  %td
                    %a.btn.btn-default.btn-xs.btn-success{:href => "#{}"}
                      %i.fa.fa-download.fa-fw
                      %strong
                        pd.filetype
        #drivers.content
          %table.table.table-striped.table-hover
            %thead
              %tr
                %th{width: 850}
                  Filename
                %th{width: 100}
                  Download
            %tr
              %td
                Filename
              %td
                %a.btn.btn-default.btn-xs.btn-success{:href => "#{}"}
                  %i.fa.fa-download.fa-fw
                  %strong
                    ZIP
        #videos.content
          %a.button.small.radius.disabled
            No Videos :(
