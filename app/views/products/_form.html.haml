= simple_form_for(@product, html: {role: "form", class: "form-horizontal"}) do |f|
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  %p
    .form-group
      = f.input :name, input_html: { class: 'form-control' }
  .form-group
    = f.label :image
    = f.file_field :image
  .form-group
    .input-group
      %span.input-group-addon Image URL
      = f.input :remote_image_url, :label => false, input_html: { class: 'form-control' }

  .form-group
    = f.input :category, input_html: { class: 'form-control' }
  .form-group
    = f.input :manufacturer, input_html: { class: 'form-control' }
  .form-group
    = f.input :model, input_html: { class: 'form-control' }
  .form-group
    = f.input :description, input_html: { class: 'form-control' }
  .form-group
    = f.input :link, input_html: { class: 'form-control' }
  .form-group
    = f.input :tags, input_html: { class: 'chosen-select' }
  .form-group
    = f.input :apms, label: 'Applicable Models', input_html: { class: 'form-control' }
  .form-group.form-actions
    = f.button :submit, :class => "btn btn-warning"