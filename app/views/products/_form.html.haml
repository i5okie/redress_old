= simple_form_for(@product, html: {class: 'form-inline'}) do |f|
  - if @product.errors.any?
    #error_explanation
      %h2
        = pluralize(@product.errors.count, "error")
        prohibited this product from being saved:
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  = f.label :image
  %br
    = f.file_field :image
    = f.input :remote_image_url, inline_label: 'or image URL'
    = f.input :category
    = f.input :name
    = f.input :manufacturer
    = f.input :model
    = f.input :description
    = f.input :link
    = f.input :tags, input_html: { class: 'chosen-select' }
    = f.submit